	//更新项目ItemCode
	function adminHeartBeat($post){
		

		global $mysql;
		$sessionId = $post["token"];
		
		$res = $mysql->DBGetOneRow("`system`", "count(*) as count", "`id` = '2'  and `paramValue` = '$sessionId'");
		if($res["count"] != 1){
			throw new Exception("admin已在别处登陆！");
		}
		echo $mysql->DBUpdateSomeCols("`system`", " `id` = '2' ", " `updateTime` = CURRENT_TIMESTAMP");
		return array("status" => "ok","errMsg" =>"");
	}
?>